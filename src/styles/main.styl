@import 'normalizecss/normalize.css'

// Style using Bespoke Classes: https://github.com/markdalgleish/bespoke-classes

*
  box-sizing border-box

body
  overflow hidden
  background transparent url('../images/noise.png')
  font-family Calibri, Helvetica
  color #5e5e5e

.bespoke-parent
  perspective 600
  position: absolute
  top: 0
  left: 0
  right: 0
  bottom: 0

section
  width 900px
  height 600px
  position absolute
  top 50%
  left 50%
  margin-left -450px
  margin-top -300px
  border-left 10px solid #ff9b26
  transform none
  opacity 0
  box-shadow 0 0 20px rgba(0,0,0,0.8)

section.colorbg
  border-left none

section.bespoke-slide
  transition all 0.7s ease
  opacity 0

section.bespoke-active
  opacity 1
  transition-delay .3s
  z-index 1

section.bespoke-inactive
  opacity 0

section.bespoke-before
  transform translateY(-100%)
  opacity 0
  z-index 2

section.bespoke-after
  transform translateY(50%)

.slidebg
  z-index 0
  position absolute
  top 0
  right 0
  left 0
  bottom 0
  background-color white
  opacity 0.8

section.colorbg .slidebg
  background linear-gradient(35deg, #d71923 25%, #fab914)

.title
  z-index 1
  font-size 40pt

.title.top
  margin-top -50%

.subtitle
  z-index 1
  font-size 20pt

section.colorbg .title
section.colorbg .subtitle
section.colorbg .subtitle a
  color white

.keyword
  color #d71923

.content
  z-index 1

.content.bottom
  bottom 100px
  top auto

.content.pullright
  right 0
  padding-right 40px

.content.pullright:last-of-type
  text-align right

section.colorbg .content
  color white

.emphatic
  background: #222

.emphatic-text
  color: white

img
  z-index 1
  position absolute

section img.stantec-logo
  height 50px
  bottom 10px
  right 10px

img.good-modelbuilder
  height 150px
  width 350px
  left 50%
  top 50%
  margin-left -175px
  margin-top 0px

img.bad-dog
  height 250px
  width 350px
  left 50%
  top 50%
  margin-left -175px
  margin-top -60px

